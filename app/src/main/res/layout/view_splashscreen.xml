<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F1EDED"
    android:gravity="center"
    tools:context=".controllers.mains.MainActivity">

    <ImageView
        android:layout_width="@dimen/di150dp"
        android:layout_height="@dimen/di150dp"
        android:layout_gravity="center"
        android:src="@drawable/logo2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/di50dp"
        android:layout_marginTop="@dimen/di20dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/colorDarkGreen"
        android:textSize="@dimen/di30dp"
        android:textStyle="bold"
        app:fontFamily="cursive" />



</LinearLayout>