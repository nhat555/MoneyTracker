<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:background="@color/colorWhite"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/di18dp"
        android:paddingTop="@dimen/di18dp"
        android:paddingRight="@dimen/di18dp"
        android:background="@color/colorWhite"
        tools:context=".controllers.mains.MainActivity">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/di120dp"
            android:layout_height="@dimen/di120dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/di30dp"
            app:cardCornerRadius="@dimen/di60dp"
            app:cardElevation="@dimen/di0dp">

            <ImageView
                android:id="@+id/imgPicture_login_info"
                tools:ignore="ContentDescription"
                android:layout_width="@dimen/di120dp"
                android:layout_height="@dimen/di120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo2"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/di20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hello"
                android:textSize="@dimen/di18dp"
                android:textColor="@color/colorDarkGreen"/>

            <TextView
                android:id="@+id/textViewName_login_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/di20dp"
                android:textStyle="bold"
                android:textColor="@color/colorDarkGreen"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/di5dp"
            android:layout_marginLeft="@dimen/di10dp"
            android:layout_marginRight="@dimen/di10dp">

            <EditText
                android:id="@+id/editTextPassword_login_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/di15dp"
                android:hint="@string/password"
                android:textColor="@color/colorBlack"
                android:ems="10"
                android:inputType="textPassword"
                android:drawableRight="@drawable/ic_baseline_visibility_24"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/di40dp"
                android:layout_marginTop="@dimen/di15dp"
                android:background="@drawable/border_radius">

                <Button
                    android:id="@+id/buttonLogin_login_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/login"
                    android:textColor="@color/colorWhite"
                    android:layout_marginLeft="@dimen/di10dp"
                    android:layout_marginRight="@dimen/di10dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:textSize="@dimen/di15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/di15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonForgotPass_login_info"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/di30dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="@string/forgot_pass"
                    android:gravity="start|center"
                    android:textColor="@color/colorDarkGreen"
                    android:textSize="@dimen/di15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|center">

                    <Button
                        android:id="@+id/buttonExit_login_info"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/di30dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:text="@string/exit_account"
                        android:textColor="@color/colorDarkGreen"
                        android:textSize="@dimen/di15dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

