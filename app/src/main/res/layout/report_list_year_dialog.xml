<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="@dimen/di200dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/year"
        android:textSize="@dimen/di30dp"
        android:background="@color/colorLightBlue"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:paddingTop="@dimen/di10dp"
        android:paddingBottom="@dimen/di10dp"
        tools:ignore="SpUsage" />

    <ListView
        android:id="@+id/listViewYear_report_list_year"
        android:layout_width="match_parent"
        android:layout_height="@dimen/di380dp"
        android:layout_gravity="center" />

</LinearLayout>