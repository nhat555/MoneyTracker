<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@android:id/tabhost"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".controllers.categories.HomeCateActivity" >

    <Button
        android:id="@+id/buttonCheck_transaction_fast_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:text="@string/check_fast"
        android:textColor="@color/colorBlack"
        android:paddingLeft="@dimen/di50dp"
        android:paddingRight="@dimen/di50dp"
        android:textSize="@dimen/di15dp" />

    <Button
        android:id="@+id/buttonDetails_transaction_fast_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:text="@string/details_fast"
        android:textColor="@color/colorBlack"
        android:paddingLeft="@dimen/di50dp"
        android:paddingRight="@dimen/di50dp"
        android:textSize="@dimen/di15dp" />

</LinearLayout>