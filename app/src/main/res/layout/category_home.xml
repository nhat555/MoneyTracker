<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/di10dp"
    android:background="@color/colorWhite"
    tools:context=".controllers.categories.HomeCateActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/di10dp"
        android:gravity="center|left">

        <ImageButton
            android:id="@+id/buttonReturn_catetory_home"
            android:layout_width="@dimen/di35dp"
            android:layout_height="@dimen/di35dp"
            android:layout_marginRight="@dimen/di17dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:background="?android:attr/selectableItemBackground"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category_home"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/di20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/di48dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical">

<!--            <ImageButton-->
<!--                android:id="@+id/buttonHelp_catetory_home"-->
<!--                android:layout_width="@dimen/di24dp"-->
<!--                android:layout_height="@dimen/di24dp"-->
<!--                android:layout_marginRight="@dimen/di10dp"-->
<!--                android:background="@drawable/ic_baseline_contact_support_24"/>-->

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/di50dp"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/di15dp"
        android:layout_marginBottom="@dimen/di15dp"
        android:gravity="end|bottom">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_radius_add"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButtonAdd_catetory_home"
                android:layout_width="@dimen/di45dp"
                android:layout_height="@dimen/di45dp"
                android:background="@drawable/ic_add_black_24dp"/>

        </LinearLayout>

    </LinearLayout>

</TabHost>