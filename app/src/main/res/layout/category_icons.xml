<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingTop="@dimen/di10dp"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.categories.CateIconsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/di10dp"
        android:gravity="center|left">

        <ImageButton
            android:id="@+id/buttonCancel_category_icons"
            android:layout_width="@dimen/di35dp"
            android:layout_height="@dimen/di35dp"
            android:layout_marginRight="@dimen/di17dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:background="?android:attr/selectableItemBackground"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category_icon"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/di20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/di48dp"/>

    </LinearLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh_category_icons"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <GridView
            android:id="@+id/gridView_category_icons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="4"
            android:paddingLeft="@dimen/di30dp"
            android:layout_marginTop="@dimen/di10dp"
            android:columnWidth="@dimen/di30dp"
            android:verticalSpacing="@dimen/di40dp"
            android:horizontalSpacing="@dimen/di10dp"
            android:background="@color/colorWhite"/>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>