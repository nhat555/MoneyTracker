<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:background="@color/colorWhite"
    android:fillViewport="false">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        tools:context=".controllers.mains.MainActivity">

        <ImageButton
            android:id="@+id/buttonLogout_personal"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="end"
            android:src="@drawable/exitbnt"
            android:background="?android:attr/selectableItemBackground"/>

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/di120dp"
            android:layout_height="@dimen/di120dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/di7dp"
            app:cardCornerRadius="@dimen/di60dp"
            app:cardElevation="@dimen/di0dp">

            <ImageView
                android:id="@+id/imgPicture_personal"
                tools:ignore="ContentDescription"
                android:layout_width="@dimen/di120dp"
                android:layout_height="@dimen/di120dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/logo2"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/textViewName_personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/di20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/colorDarkGreen"/>

            <TextView
                android:id="@+id/textViewEmail_personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/di18dp"
                android:gravity="center"
                android:textColor="@color/colorLightBlue"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/di20dp">

            <Button
                android:id="@+id/buttonMyWallet_personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:drawableRight="@drawable/ic_navigate_next_black_24dp"
                android:drawableLeft="@drawable/ic_baseline_account_balance_wallet_24"
                android:text="@string/my_wallet"
                android:textColor="@color/colorLightBlack"
                android:gravity="left|center"
                android:textAllCaps="false"
                android:paddingLeft="@dimen/di25dp"
                android:paddingRight="@dimen/di10dp"
                android:textSize="@dimen/di18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttonMyCate_personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:drawableRight="@drawable/ic_navigate_next_black_24dp"
                android:drawableLeft="@drawable/ic_baseline_category_24"
                android:text="@string/my_cate"
                android:textColor="@color/colorLightBlack"
                android:gravity="left|center"
                android:textAllCaps="false"
                android:paddingLeft="@dimen/di25dp"
                android:paddingRight="@dimen/di10dp"
                android:textSize="@dimen/di18dp" />

        </LinearLayout>

<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:background="@color/colorLightGray"-->
<!--            android:layout_marginTop="@dimen/di10dp"-->
<!--            android:layout_marginBottom="@dimen/di10dp"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttonChangePass_personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:drawableRight="@drawable/ic_navigate_next_black_24dp"
                android:drawableLeft="@drawable/ic_baseline_visibility_off_24"
                android:text="@string/change_pass"
                android:textColor="@color/colorLightBlack"
                android:gravity="left|center"
                android:textAllCaps="false"
                android:paddingLeft="@dimen/di25dp"
                android:paddingRight="@dimen/di10dp"
                android:textSize="@dimen/di18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttonEditInfo_personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:drawableRight="@drawable/ic_navigate_next_black_24dp"
                android:drawableLeft="@drawable/ic_baseline_update_24"
                android:text="@string/edit_info"
                android:textColor="@color/colorLightBlack"
                android:gravity="left|center"
                android:textAllCaps="false"
                android:paddingLeft="@dimen/di25dp"
                android:paddingRight="@dimen/di10dp"
                android:textSize="@dimen/di18dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>