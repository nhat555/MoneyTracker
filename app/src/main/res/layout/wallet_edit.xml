<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:background="@color/colorWhite"
    android:fillViewport="false">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/di10dp"
        android:background="@color/colorWhite"
        tools:context=".controllers.wallets.EditWalletActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/di18dp"
            android:gravity="center|left">

            <ImageButton
                android:id="@+id/buttonCancel_wallet_edit"
                android:layout_width="@dimen/di25dp"
                android:layout_height="@dimen/di25dp"
                android:layout_marginRight="@dimen/di17dp"
                android:src="@drawable/ic_close_black_24dp"
                android:background="?android:attr/selectableItemBackground"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wallet_edit"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/di20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">

                <Button
                    android:id="@+id/buttonSave_wallet_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="@string/save"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/di18dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/di10dp"
                android:layout_marginTop="@dimen/di10dp">

                <ImageButton
                    android:id="@+id/buttonNote"
                    android:layout_width="@dimen/di24dp"
                    android:layout_height="@dimen/di24dp"
                    android:layout_marginLeft="@dimen/di8dp"
                    android:layout_marginTop="@dimen/di12dp"
                    android:layout_marginRight="@dimen/di17dp"
                    android:background="@drawable/ic_event_note_black_24dp" />

                <EditText
                    android:id="@+id/editTextName_wallet_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/di15dp"
                    android:ems="10"
                    android:hint="@string/name"
                    android:inputType="text"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/money"
                android:layout_marginLeft="@dimen/di59dp"
                android:layout_marginTop="@dimen/di10dp"
                android:textSize="@dimen/di18dp"/>

            <EditText
                android:id="@+id/editTextMoney_wallet_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="0"
                android:maxLength="15"
                android:textColorHint="@color/colorBlack"
                android:textSize="@dimen/di30dp"
                android:layout_marginLeft="@dimen/di59dp"
                android:textColor="@color/colorBlack"
                android:inputType="numberDecimal"
                android:drawableLeft="@drawable/dollarsymbol"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/di30dp">

                <ImageButton
                    android:id="@+id/buttonDeleteIcon_wallet_edit"
                    android:layout_width="@dimen/di24dp"
                    android:layout_height="@dimen/di24dp"
                    android:src="@drawable/ic_delete_black_24dp"
                    android:background="?android:attr/selectableItemBackground"/>

                <Button
                    android:id="@+id/buttonDeleteWallet_wallet_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/di30dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="@string/delete_wallet"
                    android:paddingLeft="@dimen/di10dp"
                    android:textColor="@color/colorRed"
                    android:textSize="@dimen/di15dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>