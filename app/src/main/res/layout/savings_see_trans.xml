<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/di10dp"
    android:background="@color/colorWhite"
    tools:context=".controllers.mains.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/di10dp"
        android:gravity="center|left">

        <ImageButton
            android:id="@+id/buttonReturn_savings_see_trans"
            android:layout_width="@dimen/di35dp"
            android:layout_height="@dimen/di35dp"
            android:layout_marginRight="@dimen/di17dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:background="?android:attr/selectableItemBackground"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/see_trans"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/di20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/di48dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/di5dp"
        android:background="@color/colorLightGray"
        android:layout_marginBottom="@dimen/di10dp"
        android:layout_marginTop="@dimen/di5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/overview"
        android:textColor="@color/colorBlack"
        android:paddingLeft="@dimen/di18dp"
        android:textSize="@dimen/di22dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/di18dp"
        android:layout_marginTop="@dimen/di10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/savinged"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/di18dp"/>

        <TextView
            android:id="@+id/textViewMoney_savings_see_trans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingRight="@dimen/di10dp"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/di20dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightGray"
        android:layout_marginTop="@dimen/di10dp"
        android:layout_marginBottom="@dimen/di5dp"/>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh_savings_see_trans"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <ListView
            android:id="@+id/listView_savings_see_trans"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>